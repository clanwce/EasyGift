                <li><a href="#">One more separated link</a></li>
              </ul>
            </li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div>

    <h4>
      <!-- <%= flash[:notice] if flash[:notice] %> 
    -->
    <% if flash[:notice] %>
      <script type="text/javascript">
      alert("<%= flash[:notice] if flash[:notice] %>");
    </script>
    <% end %>
    </h4>
<!--     <p class="notice"><%= notice %></p> -->
    <p class="alert"><%= alert %></p>
   
   
<%= yield %>
</body>
  
  </style>
  <div class="footer" style="background-color:#777;;border-top: 7px solid #000;">
