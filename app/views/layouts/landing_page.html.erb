  <link href='http://fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css'>

  <!-- Custom Theme CSS -->
  <link href="https://dl.dropboxusercontent.com/u/70856403/landingPage.css" rel="stylesheet"> 


<style>
    #note {
        position: absolute;
        color: white;
        opacity: 0.95;
        padding-top: 0px;
        z-index: 6001;
        top: 0;
        left: 0;
        right: 0;
        background: #FF6347;
        text-align: center;
        line-height: 3;
        overflow: hidden; 
        -webkit-box-shadow: 0 0 10px black;
        -moz-box-shadow:    0 0 5px black;
        box-shadow:         0 0 5px black;
    }
    .cssanimations.csstransforms #note {
        -webkit-transform: translateY(-50px);
        -webkit-animation: slideDown 4s 1.0s 1 ease forwards;
        -moz-transform:    translateY(-50px);
        -moz-animation:    slideDown 4s 1.0s 1 ease forwards;
    }

    @-webkit-keyframes slideDown {
        0%, 100% { -webkit-transform: translateY(-50px); }
        10%, 90% { -webkit-transform: translateY(0px); }
    }
    @-moz-keyframes slideDown {
        0%, 100% { -moz-transform: translateY(-50px); }
        10%, 90% { -moz-transform: translateY(0px); }
    }
  </style>

</head>
<body>


    <!-- Fixed navbar -->
    <div class="navbar navbar-custom navbar-inverse navbar-fixed-top" role="navigation">

      <div id="custom_notice_container">
      <% if flash[:notice] %>
          <div id="note" align ="center">
            <div class="inline">
                <p id="flash_alert"><%= flash[:notice] if flash[:notice] %></p>
            </div>
          </div>
      <% elsif flash[:alert] %>
           <div id="note" align ="center">
            <div class="inline">
                <p style="" id="flash_alert">
                  <%= flash[:alert] if flash[:alert] %></p>
              </div>
          </div>    
          <% else %>
          <% %>   
      <% end %>
<% if current_page?("/landing") %>
      <% if flash[:notice] %>
      <script>
      document.getElementById('note').style.paddingTop='10px';
      </script>
      <% elsif flash[:alert] %>
      <script>
      document.getElementById('note').style.paddingTop='10px';
      </script>
      <% else %>
      <% %>   
      <% end %>
<% else %>
      <script>
       document.getElementById('note').style.paddingTop='10px';
      function changemethod()
      {
          window.setInterval(function(){$("#note").html("");}, 4000);
        document.getElementById('note').style.paddingTop='0px';
      }
      changemethod();

      </script>

<% end %> 


    </div>
      
      <div class="container">

        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">          
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>            
            <span class="icon-bar"></span>          
            <span class="icon-bar"></span>         
          </button>

        </div>

      <div style="margin-top:10px">
          <!-- If you easygift logo is included then add padding-left:300px; to the style attribute, above. -->
        <ul class="nav navbar-nav">
          <li class="hidden">
            <a href="#page-top"></a>
          </li>
                        
          <li class="page-scroll">
            <a href="#about">About</a>
          </li>
                        
          <li class="page-scroll">
            <a href="#facebook">Facebook</a>
          </li>
                        
          <li class="page-scroll">
            <a href="#contact">Contact</a>
          </li>
        </ul>
      </div>

      <div class="navbar-right" style="margin-bottom:10px;">

        <%= form_for(:user, :url => session_path(:user)) do |f| %>
        
         <ul class="nav navbar-nav">
            <li>
              <%= f.text_field :email, :class => "form-control", :autofocus =>"autofocus", :id =>"user_email", :style => "height: 25px; font-size: 12px;line-height: 16px; width: 160px", :name => "user[email]", :placeholder => "Email Address",       :required => "required", :type => "email"  %>
            </li>

            <li>
              <%= f.password_field :password, :class => "form-control", :autocomplete => "off", :id =>"user_password", :style => "margin-left:10px; height: 25px; font-size: 12px;line-height: 25px; width: 150px", :name => "user[password]", :required => "required", :placeholder => "Password", :size => "30", :type => "password" %>
            </li> 
            
            <li>
               <%= f.submit :class => "btn btn-default", :style => "height: 24px; font-size: 12px; margin-left:20px;line-height: 12px; width: 90px; align:center", :value => "Sign in", :name => "commit", :type => "submit"%>
            </li>
        </ul>

          <br>

        <ul class="nav navbar-nav" style="padding-top:10px">           
            <li>
                <%= f.check_box :remember_me, :type => "checkbox" %>
                <%= f.label :remember_me, :style => "color: white; height: 20px; font-size: 12px;line-height: 14px; width: 152px"%>
            </li>

            <li>
               <label style="color: white; height: 20px; font-size: 12px;line-height: 14px; background: transparent;" data-toggle="modal" data-target="#forgot">Forgot password
              </label>
            </li>

            <% end %>

            <li>  

              <input class="btn btn-default" data-toggle="modal" data-target="#signUp" style="height: 24px; font-size: 12px; margin-left:18px;line-height: 12px; width: 90px; align:center" value="Sign Up"> 

            </li>
          </ul>
        
        </div>

      </div><!--/.nav-collapse -->
    
    </div>

    <section class="intro">
        <div class="intro-body">
            <div class="container">
                <div class="row">
                    <div class="col-md-8 col-md-offset-2">
                        <h3 class="brand-heading">EasyGift</h3>
                        <p class="">A free, premium, way to request and purchase gifts with the help of your friends.</p>
                        <div class="page-scroll" >
                            <br>
                            <br>
                            <a href="#about" class="btn btn-circle">
                                <i class="fa fa-angle-double-down animated"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section id="about" class="container content-section text-center">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2">
                <h2>About EasyGift</h2>
                <p>EasyGift is a social networking plus e-commerce based website, created by engineerging students at San Jose State University, as their final project.</p>
            </div>
        </div>
    </section>

    <section id="facebook" class="content-section text-center">
        <div class="download-section">
            <div class="container">
                <div class="col-lg-8 col-lg-offset-2">
                    <h2>Connect Via Facebook</h2>
                    <p>You can connect your Facebook account right away to share your EasyGift posts with your friends. How awesome is that!</p>
                    <br>
                    <br>
  <a id="facebook_login_button" href=<%= ENV['FACEBOOK_LOGIN_URL'] %>><%= image_tag 'fb.png', :alt => 'lgo', width:"150", height:"40"%></a>
                </div>
            </div>
        </div>
    </section>

    <section id="contact" class="container content-section text-center">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2">
                <h2>Contact EasyGift</h2>
                <p>Feel free to email us to provide some feedback on our project, give us suggestions for new implementations, or to just say hello!</p>
                <p>feedback@easygift.com</p>
                <br>
                <ul class="list-inline banner-social-buttons">
                    <li><a href="#" class="btn btn-default btn-lg"><i class="fa fa-twitter fa-fw"></i> <span class="network-name">Twitter</span></a>
                    </li>
                    <li><a href="#" class="btn btn-default btn-lg"><i class="fa fa-github fa-fw"></i> <span class="network-name">Github</span></a>
                    </li>
                    <li><a href="#" class="btn btn-default btn-lg"><i class="fa fa-google-plus fa-fw"></i> <span class="network-name">Google+</span></a>
                    </li>
                </ul>
            </div>
        </div>
    </section>

    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    
    <div class="footer" align="center">
      CopyRights @  
        <a class="inline" style=""><%= image_tag 'EasyGifts.png', :alt => 'lgo', width:"150", height:"70", class: "inline" %></a>   
    </div>
 
  <!-- Forgot Modal -->
  <div class="modal fade" id="forgot" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
        <div class="modal-body">

          <br>

          <h4 style="color:black; text-transform: none;">
            Enter registered email to get password-reset link
          </h4>
          
          <%= form_for(:user, :url => password_path(:user)) do |f| %>
          
          <div class="container-fluid" align="center">
            <%= f.email_field :email, :autofocus =>"autofocus", :required => "true",:placeholder => "Email Address", :type => "email", :style => "height: 35px; font-size: 15px; line-height: 30px; width: 300px", :class => "form-control" %>
          </div>

          <br>

          <div class="container-fluid" align="center">
            <%= f.submit "Send reset instructions", :class => "btn  btn-default", :style => "height: 28px; font-size: 12px;line-height: 12px; align:center" %>
          
            <button type="button" class="btn btn-default" data-dismiss="modal" style="height: 28px; font-size: 12px; margin-left:20px;line-height: 12px; align:center">Cancel</button>
          </div>
          <% end %>
          
          <br>
        
        </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Sign Up Modal -->
  <div class="modal fade" id="signUp" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
        <div class="modal-body">

            <br>
            <br>

            <h4 style="color:black; text-transform: none;" align="center">
              Enter Account Information
            </h4>
          
            <%= form_for(:user, :url => registration_path(:user)) do |f| %>  

            <div class="container-fluid form-group" style="width:400px;" align="center">
                <%= f.text_field :username, autofocus: true, class: "form-control", :required => "true",:placeholder => "Username" %> 
                <br>
                <%= f.email_field :email, autofocus: true, class: "form-control", :required => "true",:placeholder => "Email Address" %>
                <br>
                <%= f.password_field :password, autocomplete: "off" , :required => "true" , :placeholder => "Password", class: "form-control" %>
                <br>
                <%= f.password_field :password_confirmation , autocomplete: "off" , :required => "true" , :placeholder => "Confirm Password", class: "form-control" %>
            </div>

            <br>

            <div class="container-fluid" align ="center">
            <%= f.submit "Sign Up", :class => "btn  btn-default", :style => "height: 28px; font-size: 12px;line-height: 12px; margin-left:20px;"%>
            <button type="button" class="btn btn-default" data-dismiss="modal" style="height: 28px; font-size: 12px; margin-left:20px; line-height: 12px;">Cancel</button>
            <% end %>
            </div>
            
            <br>
            <br>

            <div class="container-fluid" align ="center">
                  <button type="button" class="btn btn-default" data-toggle="modal" data-dismiss="modal" data-target="#up" style="height: 28px; font-size: 12px; margin-left:20px;line-height: 12px; align:center">Didn't receive confirmation Email?</button>
            </div>



            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Didn't recieve confirmation email Modal -->
  <div class="modal fade" id="up" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <div class="modal-body">

            <%= form_for(:user, :url => confirmation_path(:user)) do |f| %>  
            
            <div class="container-fluid" style="width:400px;" align="center">
            <%= f.email_field :email, autofocus: true, :required => "true",:placeholder => "Enter Registered Email Address", class: "inline form-control" %>
            </div>
            <br>

            <div class="container-fluid" align ="center">
              <%= f.submit "Resend confirmation instructions", :class => "btn  btn-default", :style => "height: 28px; font-size: 12px;line-height: 12px; align:center"%>
              <button type="button" class="btn btn-default" data-dismiss="modal" style="height: 28px; font-size: 12px; margin-left:10px;line-height: 12px; align:center">Cancel</button>
            </div>
          </div>

          <% end %>

        </div>
      </div>
    </div>
  </div>

