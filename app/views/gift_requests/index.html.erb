<% content_for :title, "Gift Requests" %>

<style type="text/css">
.inline
{
  display: inline
}
body{
  background-color: #008080;
  color: #ffffff;
}

@media {
  html {
    overflow: -moz-scrollbars-vertical; 
    overflow-x: scroll; 
    overflow-y: scroll;
  }
}

.container {
    width: 1024px;
    display: block;
}
</style>

<h1>Listing gift_requests</h1>

<table>
  <tr>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @gift_requests.each do |gift_request| %>
    <tr>
      <td><%= gift_request.title %></td>
      <td><%= link_to 'Show', gift_request %></td>
      <td><%= link_to 'Edit', edit_gift_request_path(gift_request) %></td>
      <td><%= link_to 'Destroy', gift_request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>

</table>

<br />

<%= link_to 'New Gift request', new_gift_request_path %>

<h1>Dummy Code</h1>
<%= form_tag do %>
  <%=autocomplete_field_tag 'Title', '', 'gift_requests/autocomplete_gift_request_title', :update_elements => {:id => '#id_element', :description => '#some_other_element'} %>
<% end %>
