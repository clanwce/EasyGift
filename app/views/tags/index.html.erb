<div id="divcontainer" >
<ul class="nav nav-tabs ">
  <li class="active"><a href="#popular" data-toggle="tab">Popular</a></li>
  <li><a href="#name" data-toggle="tab">Name</a></li>
  <li><a href="#new" data-toggle="tab">New</a></li>
</ul>


<!-- Tab panes -->
<div class="tab-content">
  <div class="tab-pane fade in active" id="popular">
    <div class="table-responsive">
      <table class="table">
        <tr>
            <% i = 0 %>

           <% tt = @tags.sort_by(&:gift_request_count) %>
           <% @tags = tt.reverse %>

            <% @tags.each do |tag| %>
              <% if i == 4 %>
              <% i = 0 %>
              </tr>
              <tr> 
              <% end %> 
                <td class="tag-cell">
                <div class="excerpt">
                  <%= link_to tag.name, tag, :class => "btn btn-default btn-sm tagpost"%> x
                  <%= tag.gift_request_count %>
               <br>
                  New Request <%= time_ago_in_words(tag.updated_at) %> ago
                </div>
              </td>
              <% i = i+1 %>
            <% end %>
        </tr>
      </table>
    </div>
  
  </div>

