<% content_for :title, "Sign Up" %>


<style type="text/css">
.inline
{
  display: inline
}
body{
  background-color: #008080;
  color: #ffffff;
}
@media {
  html {
    overflow: -moz-scrollbars-vertical; 
    overflow-x: scroll; 
    overflow-y: scroll;
  }
}

.container {
    width: 1024px;
    display: block;
}

</style>
  <div class="container">

<%- if controller_name != 'sessions' %>
  <%= link_to "Sign In", new_session_path(resource_name), class: "btn btn-primary signupbutton border" %><br/>

<% end -%>

<%= image_tag 'givemegift.png', :alt => 'lgo', width:"300", height:"300", style: "top:200px;position:absolute;"  %>
        <div class="login-screen" >

            

      <div class="login-form" >
      <!-- <form class="form-signin" role="form"> -->

<%= form_for(resource, :html => {class: "form-signin"}, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

 <div style="display:inline" >
       <%= image_tag 'user.png', :alt => 'lgo', width:"100",   height:"100" %>
            <h3 style="display:inline" >Please Sign Up</h3> 
        <!-- <span style="display:inline" class="glyphicon glyphicon-user"> -->
         <div class="form-group">
           <h4><%= f.label :username, :for => "text_field", class: "label label-default" %></h4>
        <%= f.text_field :username, autofocus: true, class: "form-control", :required => "true",:placeholder => "Username" %> 
      </div>
      <div class="form-group">
       <h4> <%= f.label :Email, :for => "email", class: "label label-default"  %></h4>
        <%= f.email_field :email, autofocus: true, class: "form-control", :required => "true",:placeholder => "Email Address" %>
        </div>
        <div class="form-group">
        <h4><%= f.label :Password, :for => "password", class: "label label-default"  %></h4>
       <%= f.password_field :password, autocomplete: "off" , :required => "true" , :placeholder => "Password", class: "form-control" %>
        </div>

        <div class="form-group">
       <h4> <%= f.label :"Confirm Password", :for => "password", class: "label label-default"  %></h4>
     <%= f.password_field :password_confirmation , autocomplete: "off" , :required => "true" , :placeholder => "Confirm Password", class: "form-control" %>
        </div>

      <%= f.submit "Sign Up", class: "btn btn-lg btn-primary btn-block border" %><br />
           
      <% end %>

      <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
        
    <label><a style="color: white" href="confirmation/new"> Didn't receive confirmation Email? </a> </label><br />

    <% end -%>

      </div>

      <!-- </form> -->

     </div>
  </div>
</div>    
