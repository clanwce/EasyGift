<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
  <%# devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>
<br>
   <h4><%= f.label :current_password %><br/>
   <%= f.password_field :current_password %></h4>

  <h4><%= f.label :password, "New password" %><br />
  <%= f.password_field :password %></h4>

  <h4><%= f.label :password_confirmation, "Confirm new password" %><br />
  <%= f.password_field :password_confirmation %></h4>

  <%= f.submit "Change my password", :class => "btn btn-default" %>
<% end %>

